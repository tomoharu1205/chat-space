.chat-side
  .side-header
    .side-header-box
      %p.side-header__user-name
        = current_user.name
      %ul.user-menu
        %li.user-menu__edit-user
          = link_to new_group_path do
            %i.fa.fa-edit
        %li.user-menu__new-group
          = link_to edit_group_path(current_user) do
            %i.fa.fa-cog
  .groups
    .group
      - current_user.groups.each do |group|
        = link_to do
          .group__name
            = group.name
          .group__message
